<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.suparv2exnerdjocokg.suparv2exnerdjo.ToDoNotes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feste Notizen"
        />
    <!-- TODO: Update blank fragment layout -->
    <fragment class="de.suparv2exnerdjocokg.suparv2exnerdjo.FixedNotesFragment"
        android:id="@+id/fixedNotes"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_fixed_notes_list" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notizen von Gestern"/>

    <fragment class="de.suparv2exnerdjocokg.suparv2exnerdjo.NotesFromYesterdayFragment"
        android:id="@+id/olderNotes"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_fixed_notes_list" />

</LinearLayout>
