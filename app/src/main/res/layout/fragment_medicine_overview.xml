                android:text="Verordnete Medikation"
                style="@style/AppTextHeadline" />

            <FrameLayout
                android:id="@+id/prediscribed_medication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="zeitlich befristete Medikation"
                style="@style/AppTextHeadline" />

            <FrameLayout
                android:id="@+id/temporary_medicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bedarfsmedikation"
                style="@style/AppTextHeadline" />

            <FrameLayout
                android:id="@+id/self_medication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
