<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="de.suparv2exnerdjocokg.suparv2exnerdjo.BasicDataActivity">

    <fragment class="de.suparv2exnerdjocokg.suparv2exnerdjo.MenuFragment"
        android:id="@+id/menu"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/menu"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/clientname"
        android:layout_toRightOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/adress"
        android:layout_below="@+id/clientname"
        android:layout_toRightOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/gebdat"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/care_level"
        android:layout_below="@+id/gebdat"
        android:layout_toRightOf="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/care_level_number"
        android:layout_toRightOf="@+id/care_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

     <ListView
      android:id="@+id/telnumbers"
      android:layout_below="@+id/care_level"
      android:layout_toRightOf="@+id/menu"
      android:layout_width="240dp"
      android:layout_height="wrap_content"
         android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/info"
        android:layout_below="@+id/telnumbers"
        android:layout_toRightOf="@+id/menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" ></TextView>


    <ListView
        android:id="@+id/documents"

        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        ></ListView>

</RelativeLayout>
