<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="bottom">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_gravity="bottom"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Datum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wound_date"
                    tools:text="Datum"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:text="Wundphase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wound_phase"
                    tools:text="Wundphase/Studium"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:text="Wundgröße (in cm)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wound_size"
                    tools:text="Wundgröße"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:text="Wundbeschreibung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wound_description"
                    tools:text="Wundbeschreibung"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:text="Art und Häufigkeit der Wundversorgung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wound_treatment"
                    tools:text="Art und Häufigkeit der Wundversorgung"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:text="Hdz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hdz"
                    tools:text="Hdz"
                    android:textSize="18sp"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"

                    android:inputType="textMultiLine"
                    android:textSize="14sp" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:textSize="14sp"
                        android:hint="Länge" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:hint="Breite"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:hint="Tiefe"
                        android:textSize="14sp" />
                </TableRow>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text|textMultiLine"
                    android:ems="10"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text|textMultiLine"
                    android:ems="10"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textSize="14sp" />

            </TableRow>

        </TableLayout>
    </LinearLayout>
</HorizontalScrollView >